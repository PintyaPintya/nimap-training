@model List<Movie>

@{
    ViewData["Title"] = "Movies";
}

<a href="@Url.Action("AddUpdate")" class="btn btn-primary">Add Movie</a>

@if (Model.Count > 0)
{
    <table class="table table-bordered">
        <thead>
            <tr>
                <th>Id</th>
                <th>Name</th>
                <th>Genre</th>
                <th>Release Date</th>
                <th>Date Added</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var movie in Model)
            {
                <tr>
                    <td>@movie.Id</td>
                    <td><a href="@Url.Action("CustomerById", new {id = movie.Id})">@movie.Name</a></td>
                    <td>@movie.Genre</td>
                    <td>@movie.ReleaseDate</td>
                    <td>@movie.DateAdded</td>
                    <td>
                        <a href="@Url.Action("AddUpdate", new{id = movie.Id})" class="btn btn-sm btn-secondary">Edit</a>
                        <a href="@Url.Action("Delete", new{id = movie.Id})" class="btn btn-danger btn-sm">Delete</a>
                    </td>
                </tr>
            }
        </tbody>
    </table>

}
else
{
    <p>No movies found</p>
}
