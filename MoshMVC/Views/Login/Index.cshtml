@model LoginDto
@{
	ViewData["Title"] = "Login";
}

<h1>Login</h1>

<form asp-action="Index" method="post">
	<div class="form-group">
		<label asp-for="EmailAddress" class="form-control-plaintext">Email</label>
		<input asp-for="EmailAddress" class="form-control" type="email" required />
		<span asp-validation-for="EmailAddress" class="text-danger"></span>
	</div>
	<div class="form-group">
		<label asp-for="Password" class="form-control-plaintext">Password</label>
		<input asp-for="Password" class="form-control" type="password" required />
		<span asp-validation-for="Password" class="text-danger"></span>
	</div>

	<button type="submit">Login</button>
</form>