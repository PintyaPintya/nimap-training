@model ICollection<Product>

@{
    ViewData["Title"] = "Products";
}

<h2>Products</h2>

<a href=@Url.Action("Create") class="btn btn-primary">Add new</a>

@if (@Model.Count > 0)
{
    <table class="table table-bordered">
        <thead>
            <tr>
                <th>Id</th>
                <th>Name</th>
                <th>Price</th>
                <th>Quantity</th>
                <th>Description</th>
                <th>Action</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var product in @Model)
            {
                <tr>
                    <td>@product.Id</td>
                    <td>@product.Name</td>
                    <td>@product.Price</td>
                    <td>@product.Quantity</td>
                    <td>@product.Description</td>
                    <td>
                        <a href=@Url.Action("Edit", new {id = product.Id}) class="btn btn-sm btn-secondary">Edit</a>
                        <a href=@Url.Action("Delete", new {id = product.Id}) class="btn btn-sm btn-danger">Delete</a>
                    </td>
                </tr>
            }
        </tbody>
    </table>
}
else
{
    <p>No products</p>
}