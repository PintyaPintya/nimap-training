@model CustomerDto

@{
    ViewData["Title"] = "Add Customer";
}

<h2>Add Customer</h2>

@using (Html.BeginForm("Create", "Customer"))
{
    <div class="form-control">
        @Html.LabelFor(m => m.Username)
        @Html.TextBoxFor(m => m.Username, new { @class = "form-control", type = "text", @required = "required"  })
        @Html.ValidationMessageFor(m => m.Username, "", new { @class = "text-danger" })

        @Html.LabelFor(m => m.Name)
        @Html.TextBoxFor(m => m.Name, new { @class = "form-control", type = "text" })

        @Html.LabelFor(m => m.Email)
        @Html.TextBoxFor(m => m.Email, new { @class = "form-control", type = "email", @required = "required" })
        @Html.ValidationMessageFor(m => m.Email, "", new { @class = "text-danger" })

        @Html.LabelFor(m => m.Address)
        @Html.TextBoxFor(m => m.Address, new { @class = "form-control", type = "text", @required = "required"  })
        @Html.ValidationMessageFor(m => m.Address, "", new { @class = "text-danger" })

        <button type="submit" class="btn btn-primary">Save Customer</button>
    </div>
}

<div>
    @Html.ValidationSummary(true, "", new { @class = "text-danger" })
</div>

<a href=@Url.Action("Index") class="btn btn-secondary">Back to list</a>