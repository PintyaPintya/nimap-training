@model ICollection<Customer>

@{
    ViewData["Title"] = "Customers";
}

<h2>Customers</h2>

<a href=@Url.Action("Create") class="btn btn-primary">Add new</a>
<a href=@Url.Action("DisabledCustomers") class="btn btn-secondary">Disabled Customers</a>

@if (@Model.Count > 0)
{
    <table class="table table-bordered">
        <thead>
            <tr>
                <th>Id</th>
                <th>Username</th>
                <th>Name</th>
                <th>Role</th>
                <th>Email</th>
                <th>Address</th>
                <th>Actions</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var customer in @Model)
            {
                <tr>
                    <td>@customer.Id</td>
                    <td>@customer.Username</td>
                    <td>@customer.Name</td>
                    <td>@customer.Role</td>
                    <td>@customer.Email</td>
                    <td>@customer.Address</td>
                    <td>
                        <a href=@Url.Action("Edit", new {id = customer.Id}) class="btn btn-sm btn-secondary">Edit</a>
                        <a href=@Url.Action("Delete", new {id = customer.Id}) class="btn btn-sm btn-danger">Delete</a>
                    </td>
                </tr>
            }
        </tbody>
    </table>
}
else
{
    <p>No customers</p>
}