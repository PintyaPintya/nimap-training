@model List<Movie>

@{
	ViewData["Title"] = "Movies";
}

<h2>@ViewData["Title"]</h2>

<a href=@Url.Action("Create") class="btn btn-primary">Add Movie</a>

@if (Model.Count != 0)
{
	<table class="table table-bordered">
		<thead>
			<tr>
				<th>Movie</th>
				<th>Genre</th>
			</tr>
		</thead>
		<tbody>
			@foreach (var movie in Model)
			{
				<tr>
					<td>
						<a href="@Url.Action("Edit", new {id = movie.Id})" class="link-primary">@movie.Name</a>
					</td>
					<td>
						<p>@movie.Genre.Name</p>
					</td>
				</tr>
			}
		</tbody>
	</table>
}
else
{
	<p>We dont have any movies yet</p>
}


