@model List<Customer>

@{
	ViewData["Title"] = "Customers";
}

<h2>@ViewData["Title"]</h2>

<a href=@Url.Action("Create") class="btn btn-primary">Add New</a>

@if (Model.Count != 0)
{
	<table class="table table-bordered">
		<thead>
			<tr>
				<th>Customer</th>
				<th>Membership Type</th>
			</tr>
		</thead>
		<tbody>
			@foreach (var customer in Model)
			{
				<tr>
					<td>
						<a href="@Url.Action("Edit", new {id = customer.Id})" class="link-primary">@customer.Name</a>
					</td>
					<td>
						<p>@customer.MembershipType.Name</p>
					</td>
				</tr>
			}
		</tbody>
	</table>
}
else
{
	<p>We dont have any customers yet</p>
}


